<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VertretungsPlaner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_medium</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <!-- Dark theme surface colors -->
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Remove elevation/shadows for flat design -->
        <item name="elevation">0dp</item>
    </style>
</resources>