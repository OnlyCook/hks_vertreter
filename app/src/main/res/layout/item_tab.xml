<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tabContainer"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:strokeColor="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tabThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/moodle_tab_preview" />

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_bottom_overlay" />

        <TextView
            android:id="@+id/tabTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <View
            android:id="@+id/defaultTabIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="?attr/settingsColorPrimary"
            android:visibility="gone" />

        <!-- PDF Indicator Triangle -->
        <ImageView
            android:id="@+id/pdfTabIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|start"
            android:src="@drawable/triangle_indicator"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnPinTab"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_pin_outline"
                android:background="@drawable/circle_button_background"
                android:contentDescription="@string/moodle_pin_tab"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnCloseTab"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_cancel"
                android:background="@drawable/circle_button_background"
                android:contentDescription="@string/moodle_close_tab"
                android:scaleType="centerInside"
                android:padding="6dp"
                app:tint="@android:color/white" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>