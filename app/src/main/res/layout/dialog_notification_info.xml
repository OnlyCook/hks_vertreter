<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/dialogBackgroundColor">

    <!-- title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dlg_not_info_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/dialogTitleColor"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- info icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_info"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:tint="?attr/dialogTitleColor" />

    <!-- main text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dlg_not_info_main_text"
        android:textSize="16sp"
        android:textColor="?attr/dialogTextColor"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- reqs list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <!-- notis permission -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="16sp"
                android:textColor="?attr/dialogTitleColor"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dlg_not_info_permission"
                android:textSize="14sp"
                android:textColor="?attr/dialogTextColor" />

        </LinearLayout>

        <!-- battery optimization -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="16sp"
                android:textColor="?attr/dialogTitleColor"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dlg_not_info_battery_opt"
                android:textSize="14sp"
                android:textColor="?attr/dialogTextColor" />

        </LinearLayout>

        <!-- background activity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="16sp"
                android:textColor="?attr/dialogTitleColor"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dlg_not_info_background"
                android:textSize="14sp"
                android:textColor="?attr/dialogTextColor" />

        </LinearLayout>

    </LinearLayout>

    <!-- buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNotificationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dlg_not_info_btn_notifications"
            android:textColor="@android:color/white"
            android:background="?attr/dialogTitleColor"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnBatterySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dlg_not_info_btn_battery"
            android:textColor="?attr/dialogTitleColor"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dlg_not_info_btn_close"
            android:textColor="?attr/dialogSecondaryTextColor"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>