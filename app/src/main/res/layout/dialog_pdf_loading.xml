<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvPdfLoadingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/moodle_loading_pdf"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvPdfLoadingStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/progressBarPdfLoading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="100"
        android:progressTint="?android:attr/colorAccent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCancelPdfLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moodle_cancel"
        android:textColor="?attr/dialogSectionButtonColor"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center" />

</LinearLayout>