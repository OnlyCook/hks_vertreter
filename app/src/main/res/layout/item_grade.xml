<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/rounded_background"
    android:elevation="2dp">

    <!-- main content area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Subject and teacher -->
        <TextView
            android:id="@+id/textSubjectInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mathematik | Lehrer: SMITH"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="4dp" />

        <!-- grades line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/textOralGrade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MN: 1.9"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textWrittenGrade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SN: 2.1"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textFinalGrade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EndgÃ¼ltig: 2.0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

    <!-- edit button -->
    <ImageButton
        android:id="@+id/btnEditSubject"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_pencil"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_marginEnd="4dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/item_grade_edit"
        style="@style/Widget.AppCompat.Button" />

</LinearLayout>