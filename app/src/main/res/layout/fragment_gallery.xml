<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/background_light">

        <!-- search bar -->
        <EditText
            android:id="@+id/searchBarCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Suche im Kalender..."
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:drawableStart="@android:drawable/ic_menu_search" />

        <Button
            android:id="@+id/btnEditCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_light"
            android:minWidth="48dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnMenuCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:minWidth="48dp"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

    <!-- week nav -->
    <LinearLayout
        android:id="@+id/weekNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@android:color/background_light">

        <Button
            android:id="@+id/btnPreviousWeek"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="◄"
            android:textSize="18sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/currentWeekTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kalenderwoche wird geladen..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnNextWeek"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="►"
            android:textSize="18sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>

    <!-- main calendar content -->
    <ScrollView
        android:id="@+id/calendarScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@android:color/background_light">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/calendarGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:stretchColumns="*" />

        </HorizontalScrollView>

    </ScrollView>

    <!-- color legend -->
    <LinearLayout
        android:id="@+id/colorLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/background_light" />

    <!-- edit mode controls -->
    <LinearLayout
        android:id="@+id/editModeControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center"
        android:background="@android:color/background_light"
        android:visibility="gone">

        <!-- top: Undo and Redo buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnUndo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Undo"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnRedo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Redo"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@android:color/darker_gray" />

        </LinearLayout>

        <!-- bottom: Cancel and Save buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Abbrechen"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@android:color/holo_red_light" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Speichern"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:backgroundTint="@android:color/holo_green_light" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>