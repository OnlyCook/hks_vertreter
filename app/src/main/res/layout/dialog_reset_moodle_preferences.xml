<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_reset_moodle_preferences_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/dialogSectionButtonColor"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_reset_moodle_preferences_desc"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/checkboxResetExamFetch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_reset_exam_fetch_preference"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:singleLine="false" />

    <CheckBox
        android:id="@+id/checkboxResetTimetableFetch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_reset_timetable_fetch_preference"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:singleLine="false" />

    <CheckBox
        android:id="@+id/checkboxResetProgramName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_reset_saved_program_name"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:singleLine="false" />

    <CheckBox
        android:id="@+id/checkboxResetTimetableEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_reset_saved_timetable_entry"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:singleLine="false" />

    <CheckBox
        android:id="@+id/checkboxResetMainCourseUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_reset_main_course_url"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:singleLine="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@android:color/darker_gray"
            android:background="?attr/selectableItemBackground"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_clear_selected"
            android:textColor="@android:color/white"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>