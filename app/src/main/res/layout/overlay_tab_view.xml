<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/settingsBackgroundColor"
    android:clickable="true"
    android:focusable="true">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toggle Handle with Icon -->
        <FrameLayout
            android:id="@+id/layoutToggleHandle"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <View
                android:layout_width="80dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_handle_background" />

            <ImageView
                android:id="@+id/handleIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_drag_handle"
                android:alpha="0.6"
                app:tint="?attr/textSecondaryColor" />
        </FrameLayout>

        <!-- Header -->
        <LinearLayout
            android:id="@+id/tabHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageButton
                android:id="@+id/btnClearAllTabs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_trash_can"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/moodle_clear_all"
                app:tint="?attr/settingsColorPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnCloseTabOverlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/moodle_close"
                app:tint="?attr/settingsColorPrimary" />

        </LinearLayout>

        <!-- Tab Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="0dp"
            android:paddingBottom="8dp" />

    </LinearLayout>

</FrameLayout>