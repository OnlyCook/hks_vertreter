<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etSearchQuery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/text_viewer_search_hint"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch" />

        <ImageButton
            android:id="@+id/btnClearSearchQuery"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/moodle_clear_search"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvSearchResults"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_viewer_no_results"
            android:textAlignment="center"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnPreviousResult"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/text_viewer_previous_result"
            android:enabled="false" />

        <ImageButton
            android:id="@+id/btnNextResult"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/text_viewer_next_result"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>