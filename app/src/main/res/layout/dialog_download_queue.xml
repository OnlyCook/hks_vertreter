<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvQueueSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/moodle_queue_summary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvTotalSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 MB / 0 MB"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDownloadSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 KB/s"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTimeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0s"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarTotal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginBottom="12dp"
        android:progress="0"
        android:max="100"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queueRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:scrollbars="vertical" />

</LinearLayout>