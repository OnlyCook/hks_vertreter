<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/cbCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moodle_course"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/textPrimaryColor" />

        <TextView
            android:id="@+id/tvEntryCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moodle_entries"
            android:textSize="12sp"
            android:textColor="?attr/textSecondaryColor"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivExpandIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_forward"
        android:contentDescription="@string/moodle_expand"
        android:layout_marginStart="12dp"
        android:tint="?attr/textSecondaryColor" />

</LinearLayout>