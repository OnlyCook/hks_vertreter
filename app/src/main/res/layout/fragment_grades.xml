<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gradesRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/background_light">

        <!-- search -->
        <EditText
            android:id="@+id/searchBarGrades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Nach Fach oder Lehrer suchen..."
            android:inputType="text"
            android:padding="12dp"
            android:paddingStart="40dp"
            android:background="@drawable/subtle_search_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:textColorHint="#757575"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnMenuGrades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:minWidth="48dp"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

    <!-- header with counter + final grade -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deine Noten:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGradeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 0 Fächer benotet"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvFinalGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesamtnote: -"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSubjectChangeWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/warning_background"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deine Fächer haben sich geändert!"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Möchtest du die Notenseite mit den neuen Fächern aktualisieren?"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnAcceptSubjectChanges"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aktualisieren"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDeclineSubjectChanges"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beibehalten"
                android:backgroundTint="@android:color/holo_red_light"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- grades list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGrades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>