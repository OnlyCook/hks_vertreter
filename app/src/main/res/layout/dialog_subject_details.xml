<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mathematik"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lehrer: SMITH"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- grade summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@android:color/background_light"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvOralGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mündlich: 2.0"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvWrittenAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schriftlich: 2.1"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvRatio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verhältnis: 50% : 50%"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvFinalGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endnote: 2.0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <!-- exam grades list -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klausurnoten:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerExamGrades"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</ScrollView>