<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gall_notes"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/gall_notes_hint"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:maxLines="4"
        android:padding="12dp"
        android:background="@drawable/subtle_search_background"
        android:textSize="16sp"
        android:textColorHint="#757575" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gall_special_events"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/occasionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAddOccasion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gall_add_event"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

</LinearLayout>