<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Subject Selection (spinner or Edittext based on scanned pdf timetable) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fach:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_with_arrow_background"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:popupBackground="@drawable/spinner_popup_background"
            android:padding="12dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editTextSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Fach eingeben"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:background="@drawable/subtle_search_background"
            android:textColorHint="#757575"
            android:textSize="14sp"/>

        <Switch
            android:id="@+id/switchAutoHomework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fälligkeit automatisch ausfüllen"
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Horizontal container for labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <!-- Due Date label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fälligkeitsdatum:"
                android:textSize="14sp" />

            <!-- Lesson Time label -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stunde (optional):"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Horizontal container for input elements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Due Date Selection button -->
            <Button
                android:id="@+id/btnDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Datum wählen"
                android:backgroundTint="@android:color/holo_blue_light"
                android:padding="12dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:minHeight="0dp"
                style="@style/Widget.AppCompat.Button" />

            <!-- Lesson Time Selection spinner -->
            <Spinner
                android:id="@+id/spinnerLesson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/spinner_with_arrow_background"
                android:padding="12dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:popupBackground="@drawable/spinner_popup_background" />

        </LinearLayout>

        <!-- Content input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hausaufgaben-Inhalt:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipp: Beginne Zeilen mit '-' für Checklisten. Du kannst Text und Checklisten mischen."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Beschreibung der Hausaufgabe...&#10;- Aufgabe 1&#10;- Aufgabe 2&#10;Hinweis: Zusätzliche Informationen"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/subtle_search_background"
            android:scrollbars="vertical"
            android:maxLines="10"
            android:textSize="14sp"
            android:textColorHint="#757575"/>

    </LinearLayout>

</ScrollView>