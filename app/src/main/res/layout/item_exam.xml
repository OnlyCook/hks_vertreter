<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/rounded_background"
    android:elevation="2dp">

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Exam subject and date -->
        <TextView
            android:id="@+id/textExamInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mathematik | 15.03.2025 (in 5 Tagen)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="4dp" />

        <!-- Exam note -->
        <TextView
            android:id="@+id/textExamNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Themen: Analysis, Kurvendiskussion"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:padding="4dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/btnEditExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✎"
            android:textSize="14sp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginEnd="4dp"
            android:minWidth="36dp"
            android:minHeight="36dp"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnDeleteExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✖"
            android:textSize="14sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:minWidth="36dp"
            android:minHeight="36dp"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

</LinearLayout>