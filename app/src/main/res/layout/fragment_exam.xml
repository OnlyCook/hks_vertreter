<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/background_light">

        <!-- search -->
        <EditText
            android:id="@+id/searchBarExam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="Nach Fach suchen..."
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/subtle_search_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:drawablePadding="8dp"
            android:paddingStart="20dp"/>

        <Button
            android:id="@+id/btnAddExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_light"
            android:minWidth="48dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnMenuExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â˜°"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:minWidth="48dp"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

    <!-- header with counter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/background_light"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deine Klausuren:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExamCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 0 Klausuren"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Exam list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExam"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>