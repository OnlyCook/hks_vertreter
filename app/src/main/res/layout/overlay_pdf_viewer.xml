<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/settingsBackgroundColor"
    android:clickable="true"
    android:focusable="true">

    <!-- PDF Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="?attr/settingsBackgroundColor"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnClosePdf"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/moodle_close_pdf" />

        <TextView
            android:id="@+id/pdfPageIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/moodle_pdf_page_default"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/textPrimaryColor" />

        <ImageButton
            android:id="@+id/btnPdfOptions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/moodle_pdf_options" />

    </LinearLayout>

    <!-- PDF Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/homeworkFragmentBackgroundColor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <ImageView
                    android:id="@+id/pdfImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/moodle_pdf_page" />

            </HorizontalScrollView>

        </ScrollView>

    </FrameLayout>

    <!-- PDF Navigation Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/homeworkFragmentBackgroundColor"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnPrevPage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/circle_button_background_primary"
            android:contentDescription="@string/moodle_prev_page"
            android:layout_marginEnd="32dp"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/btnNextPage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="@drawable/circle_button_background_primary"
            android:contentDescription="@string/moodle_next_page"
            android:layout_marginStart="32dp"
            android:scaleType="centerInside"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>