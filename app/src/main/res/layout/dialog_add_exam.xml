<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Subject Selection (spinner or editext based on scanned pdf tt) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fach:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_with_arrow_background"
            android:padding="12dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:popupBackground="@drawable/spinner_popup_background"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editTextExamSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fach eingeben"
            android:padding="12dp"
            android:background="@drawable/subtle_search_background"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:layout_marginBottom="12dp"/>

        <!-- Date Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klausurdatum:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnExamDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Datum wählen"
            android:backgroundTint="@android:color/holo_blue_light"
            style="@style/Widget.AppCompat.Button" />

        <!-- Mark field (only visible for overdue exams) -->
        <LinearLayout
            android:id="@+id/layoutMarkSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klausurnote:"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/editTextMark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="0-15 Punkte"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="12dp"
                    android:background="@drawable/subtle_search_background"
                    android:textColorHint="#757575"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textGradeDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="@android:color/background_light"
                    android:minWidth="60dp"
                    android:gravity="center" />

            </LinearLayout>
        </LinearLayout>

        <!-- Note Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notiz (optional):"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextExamNote"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Zusätzliche Informationen zur Klausur..."
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/subtle_search_background"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:textColorHint="#757575"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>