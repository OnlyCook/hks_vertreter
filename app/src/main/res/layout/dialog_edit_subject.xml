<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Subject infos -->
        <TextView
            android:id="@+id/tvSubjectInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dlg_edit_sub_subject_info"
            android:textSize="12sp"
            android:textStyle="italic"
            android:background="@android:color/background_light"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Card: Exam count -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_exam_count"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlg_edit_sub_two_exams"
                        android:textSize="12sp" />

                    <Switch
                        android:id="@+id/switchExamCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlg_edit_sub_one_exam"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Prüfungsfach settings -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPruefungsfach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_exam_subject_settings"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dlg_edit_sub_choose_exam_subject"
                        android:textSize="12sp" />

                    <Switch
                        android:id="@+id/switchPruefungsfach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Prüfungsergebnis Input (shown only when prüfungsfach is enabled) -->
                <LinearLayout
                    android:id="@+id/layoutPruefungsergebnis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlg_edit_sub_exam_result"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/editPruefungsergebnis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dlg_edit_sub_exam_result_hint"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:background="@drawable/subtle_search_background"
                        android:textSize="16sp"
                        android:textColorHint="#757575"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- half Years Selection -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHalfYears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_half_years_selection"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvHalfYearsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_half_years_count"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@android:color/background_light"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekBarHalfYears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:min="1"
                    android:progress="2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Oral Grade input -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_oral_grade"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Grade System toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlg_edit_sub_grades"
                        android:textSize="11sp" />

                    <Switch
                        android:id="@+id/switchGradeSystem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dlg_edit_sub_points"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlg_edit_sub_exact"
                        android:textSize="11sp" />

                    <Switch
                        android:id="@+id/switchGradeRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dlg_edit_sub_range"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Grade input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editOralGrade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/dlg_edit_sub_oral_grade_hint"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:background="@drawable/subtle_search_background"
                        android:textSize="16sp"
                        android:textColorHint="#757575"/>

                    <TextView
                        android:id="@+id/tvGradeRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:minHeight="40dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Grade +Ratio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_ratio"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvRatioDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_ratio_display"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/background_light"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_oral"
                    android:textSize="11sp"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekBarOral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_edit_sub_written"
                    android:textSize="11sp"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekBarWritten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>