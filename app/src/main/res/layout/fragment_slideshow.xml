<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <!-- Sort and Add section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/background_light">

        <EditText
            android:id="@+id/searchBarHomework"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="@string/frag_slide_search_subject_hint"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/subtle_search_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:textSize="16sp"
            android:textColorHint="#757575"
            android:drawablePadding="8dp"
            android:paddingStart="20dp"/>

        <Button
            android:id="@+id/btnAddHomework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＋"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_light"
            android:minWidth="48dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:minWidth="48dp"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

    <!-- Header with counter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/background_light"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frag_slide_your_homework"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHomeworkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_slide_homework_count"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Homework list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomework"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>