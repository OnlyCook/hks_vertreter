<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/homeworkFragmentBackgroundColor">

    <!-- Sort and Add section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/homeworkFragmentBackgroundColor">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <EditText
                android:id="@+id/searchBarHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frag_slide_search_subject_hint"
                android:inputType="text"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="40dp"
                android:background="@drawable/subtle_search_background"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:textSize="16sp"
                android:textColorHint="#757575"
                android:drawablePadding="8dp" />

            <ImageButton
                android:id="@+id/btnClearSearchHomework"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_cancel"
                android:contentDescription="@string/set_act_clear_search"
                android:visibility="gone"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnAddHomework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＋"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_light"
            android:minWidth="48dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="18sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:minWidth="48dp"
            style="@style/Widget.AppCompat.Button" />

    </LinearLayout>

    <!-- Header with counter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/homeworkFragmentBackgroundColor"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frag_slide_your_homework"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/homeworkFragmentTextColor" />

        <TextView
            android:id="@+id/tvHomeworkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_slide_homework_count"
            android:textSize="14sp"
            android:textColor="?attr/homeworkFragmentTextColor" />
    </LinearLayout>

    <!-- Homework list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHomework"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>