<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dia_add_sub_manual_enter_info"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editTextSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/dia_add_sub_manual_subject_hint"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:background="@drawable/subtle_search_background"
        android:textSize="16sp"
        android:textColorHint="#757575"/>

    <EditText
        android:id="@+id/editTextTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/dia_add_sub_manual_teacher_hint"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="12dp"
        android:background="@drawable/subtle_search_background"
        android:textSize="16sp"
        android:textColorHint="#757575"/>

    <EditText
        android:id="@+id/editTextRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="@string/dia_add_sub_manual_room_hint"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:background="@drawable/subtle_search_background"
        android:textSize="16sp"
        android:textColorHint="#757575"/>

    <!-- alt rooms -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dia_add_sub_manual_alt_rooms"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <Switch
            android:id="@+id/switchAlternativeRooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alternativeRoomsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dia_add_sub_manual_alt_rooms_max"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <!-- here dynamically added alt rooms will appear -->

        <Button
            android:id="@+id/btnAddAlternativeRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dia_add_sub_manual_add_room_btn"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>