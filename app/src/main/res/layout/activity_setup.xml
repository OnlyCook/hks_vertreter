<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

            <!-- App Icon with higher resolution -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp" />

            <!-- School Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heinrich-Kleyer-Schule"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center"
                android:layout_marginBottom="0dp" />

            <!-- App Purpose -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schüler-Hilfs-App"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- willkommen txt -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Willkommen! Bitte wähle zunächst deinen Bildungsgang und deine Klasse aus, um die App zu nutzen."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Help button -->
            <Button
                android:id="@+id/btnHilfe"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Bildungsgang/Klasse fehlt?"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary"
                android:background="@drawable/button_outlined"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:minHeight="0dp" />

        </LinearLayout>

        <!-- Setupcards container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Bildungsgang Selection -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:radius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_school"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bildungsgang auswählen"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tvStep1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/step_circle"
                            android:gravity="center"
                            android:minWidth="20dp"
                            android:minHeight="20dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wähle deinen Bildungsgang aus der Liste:"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="12dp" />

                    <Spinner
                        android:id="@+id/spinnerBildungsgang"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_with_arrow_background"
                        android:padding="12dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:popupBackground="@drawable/spinner_popup_background" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Klasse Selectioncard -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardKlasseSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:elevation="3dp"
                android:radius="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_class"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Klasse auswählen"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tvStep2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/step_circle"
                            android:gravity="center"
                            android:minWidth="20dp"
                            android:minHeight="20dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wähle deine Klasse aus der Liste:"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="12dp" />

                    <Spinner
                        android:id="@+id/spinnerKlasse"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_with_arrow_background"
                        android:padding="12dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:popupBackground="@drawable/spinner_popup_background" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Complete Setup button -->
            <Button
                android:id="@+id/btnBestaetigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Einrichtung abschließen"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary"
                android:paddingVertical="16dp"
                android:visibility="gone"
                android:layout_marginBottom="32dp"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>