        <!-- nav_divider.xml -->
        <item name="navDividerColor">@color/nav_divider_color_light</item>

        <!-- galleryfragment.kt -->
        <item name="galleryBackgroundColor">@color/calendar_background_light</item>
        <item name="calendarBreakBackgroundColor">@color/light_gray</item>
        <item name="calendarCellBorderColor">@color/light_border</item>
        <item name="calendarLessonTimeBackgroundColor">@color/lighter_gray</item>
        <item name="calendarNotes">@color/calendar_notes_light</item>
        <item name="calendarNotesFont">@color/calendar_notes_text_light</item>
        <item name="calendarNotesInner">@color/calendar_notes_inner_light</item>
    </style>

    <style name="Theme.VertretungsPlaner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VertretungsPlaner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.VertretungsPlaner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">2dp</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Splash screen background -->
        <item name="android:windowBackground">@color/splash_background_light</item>
    </style>
