<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VertretungsPlaner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item> <!-- main background color -->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <!-- Surface colors for modern flat design -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="android:colorBackground">@color/light_gray</item>
        <!-- Remove elevation/shadows for flat design -->
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.VertretungsPlaner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VertretungsPlaner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.VertretungsPlaner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">2dp</item>
    </style>
</resources>