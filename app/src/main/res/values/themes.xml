        <item name="dialogAddSubjectSecondaryTextColor">@color/dialog_add_subject_secondary_light</item>
        <item name="dialogAddSubjectButtonColor">@color/dialog_add_subject_button_light</item>

        <!-- dialog_section_selection.xml -->
        <item name="dialogSectionButtonColor">@color/dialog_section_button_light</item>

        <!-- fragment_exam.xml -->
        <!-- fragment_slideshow.xml -->
        <item name="homeworkFragmentBackgroundColor">@color/homework_fragment_bg_light</item>
        <item name="homeworkFragmentTextColor">@color/homework_fragment_text_light</item>
        <item name="homeworkItemEditButtonColor">@color/homework_item_edit_btn_light</item>
        <item name="homeworkItemIconColor">@color/homework_item_icon_light</item>
