        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="elevation">0dp</item>

        <!-- drawables -->
        <item name="searchBackgroundColor">@color/light_search_background</item>
        <item name="spinnerBackgroundColor">@color/white</item>
        <item name="borderColor">@color/light_border</item>
        <item name="arrowColor">@color/arrow_light</item>
