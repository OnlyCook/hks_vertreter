<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VertretungsPlaner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/medium_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="elevation">0dp</item>

        <!-- drawables -->
        <item name="searchBackgroundColor">@color/light_search_background</item>
        <item name="spinnerBackgroundColor">@color/white</item>
        <item name="borderColor">@color/light_border</item>
        <item name="arrowColor">@color/arrow_light</item>
        <item name="editTextBackgroundColor">@color/white</item>
        <item name="timeIndicatorBackgroundColor">@color/white</item>

        <!-- homefragment.kt -->
        <item name="homeBackgroundColor">@color/home_bg_light</item>
        <item name="headerBackgroundColor">@color/white</item>
        <item name="tableBackgroundColor">@color/white</item>
        <item name="tableTextColor">@color/black</item>
        <item name="filterButtonBackgroundColor">@color/white</item>

        <!-- settingsactivity.kt -->
        <item name="settingsBackgroundColor">@color/home_bg_light</item>
        <item name="searchBarBackgroundColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="textPrimaryColor">@color/black</item>
        <item name="textSecondaryColor">@color/dark_gray</item>
        <item name="sectionHeaderTextColor">@color/black</item>
        <item name="settingsColorPrimary">@color/primary_blue_medium</item>
        <item name="settingsHintBackgroundColor">@color/settings_hint_background_light</item>
        <item name="filterLiftButtonHintColor">@color/filter_lift_button_hint_light</item>
        <item name="timetableManagerDropDownBG">@color/timetable_manager_drop_down_bg_light</item>
    </style>

    <style name="Theme.VertretungsPlaner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VertretungsPlaner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.VertretungsPlaner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">2dp</item>
    </style>
</resources>