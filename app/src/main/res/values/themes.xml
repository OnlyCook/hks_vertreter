        <item name="dialogSecondaryTextColor">@color/dialog_secondary_text_light</item>

        <!-- subject_selection_activity.xml -->
        <item name="subjectSelectionBackgroundColor">@color/subject_selection_bg_light</item>
        <item name="subjectSelectionItemBackgroundColor">@color/subject_selection_item_bg_light</item>
